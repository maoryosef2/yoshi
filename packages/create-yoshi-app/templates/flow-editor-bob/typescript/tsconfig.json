{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
		"allowJs": true,
    "noImplicitAny": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "./__tests__/**/*.ts",
		"./src/**/*.spec.tsx",
		"./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "files": [
    "./jest-yoshi.config.js",
    "./node_modules/yoshi-flow-editor/types.d.ts",
    "./node_modules/jest-yoshi-preset/types.d.ts"
  ]
}
